    style.
        body {
            transition: all 0.7s
        }
        #content-container {
            width: 100%
        }
        .round-button {
            margin: 350px auto 50px;
            text-align: center;
            width:70%;
        }
        .round-button-circle {
            width: 100%;
            height:0;
            padding-bottom: 100%;
            border-radius: 50%;
            border:10px solid #cfdcec;
            overflow:hidden;

            background:black;
            box-shadow: 0 0 3px gray;
        }
        .round-button-circle:hover {
            background:black;
        }
        .round-button a {
            display:block;
            float:left;
            width:100%;
            padding-top:50%;
            padding-bottom:50%;
            line-height:1em;
            margin-top:-0.5em;

            text-align:center;
            color:white;
            font-family:Verdana;
            font-size:5.2em;
            font-weight:bold;
            text-decoration:none;
        }
        img {
            display: block;
            margin: auto;
            text-align: center;
        }
        @media (min-width: 600px) {
            .round-button {
                margin: 50px auto 50px;
                text-align: center;
                width: 50%;
            }
            .round-button a {
                font-size: 4em;
            }
        }
  body
    #content-container
        block content